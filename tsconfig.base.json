{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "lib": ["ESNext", "dom"],
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false
  },
  "exclude": ["demo", "jest.config.ts"]
}
